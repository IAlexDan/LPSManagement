<EditForm Model="@Employe" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="form-group">
        <label>First Name: </label>
        <div>
            <InputText @bind-Value="@Employe.FirstName"></InputText>
            <ValidationMessage For="@(() => Employe.FirstName)"></ValidationMessage>
        </div>
    </div>
    <div class="form-group">
        <label>Last Name: </label>
        <div>
            <InputText @bind-Value="@Employe.LastName"></InputText>
            <ValidationMessage For="@(() => Employe.LastName)"></ValidationMessage>
        </div>
    </div>
    <div class="form-group">
        <label>Phone Number: </label>
        <div>
            <InputText @bind-Value="@Employe.PhoneNumber"></InputText>
            <ValidationMessage For="@(() => Employe.PhoneNumber)"></ValidationMessage>
        </div>
    </div>

    <div class="form-group">
        <label>Email: </label>
        <div>
            <InputText @bind-Value="@Employe.Email"></InputText>
            <ValidationMessage For="@(() => Employe.Email)"></ValidationMessage>
        </div>
    </div>
    <div class="form-group">
        <label>Start Date </label>
        <div>
            <InputDate @bind-Value="@Employe.StartDate"></InputDate>
            <ValidationMessage For="@(() => Employe.StartDate)"></ValidationMessage>
        </div>
    </div>

    <button type="submit" class="btn btn-success" disabled="@isSubmiting">
        @if (isSubmiting)
        {
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            <span class="sr-only">Loading...</span>
        }
        @ButtonText
    </button>
</EditForm>

@code {
    [Parameter] public Employe Employe { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
    [Parameter] public bool isSubmiting { get; set; }

}
